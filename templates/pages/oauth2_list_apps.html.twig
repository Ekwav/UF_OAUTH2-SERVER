{% extends "pages/abstract/dashboard.html.twig" %}

{% block page_title %}Your Apps{% endblock %}
{% block page_description %}{% endblock %}

{% block body_matter %}

        <div class="row">
            <div class="col-md-12">
                <div id="client-table-box" class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title pull-left"><i class="fa fa-fw fa-user"></i> Clients</h3>
                        {% include "tables/table-tool-menu.html.twig" %}
                    </div>
                    <div class="box-body">
                        {% include "tables/clients.html.twig" with {
                                "table" : {
                                    "id" : "table-members"
                                }
                            }
                        %}
                    </div>
                    <div class="box-footer">
                        <button type="button" class="btn btn-success js-client-create">
                            <i class="fa fa-plus-square"></i>  Create client
                        </button>
                    </div>
                </div>
            </div><!-- /.col -->
        </div><!-- /.row -->
{% endblock %}

{% block scripts_page %}
    <!-- Include validation rules -->
    <script>
    {% include "pages/partials/page.js.twig" %}
    </script>

    <!-- Include form widgets JS -->
    {{ assets.js('js/form-widgets') | raw }}
    <!-- Include page-specific JS -->
    {{ assets.js('js/pages/clients') | raw }}

{% endblock %}
